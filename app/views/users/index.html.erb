<div class="container">
	<h3>美食達人</h3>
	<ul class="nav nav-tabs">
	  <li role="presentation" ><%= link_to "首頁", root_path %></li>
	  <li role="presentation" ><%= link_to "最新動態", feeds_restaurants_path %></li>
	  <li role="presentation" ><%= link_to "Top Ten", ranking_restaurants_path %></li>
	  <li role="presentation" class="active"><%= link_to "美食達人", users_path %></li>
	</ul>
		
	<% @users.each do |user| %>
	  <div class="col-sm-6 col-md-4">
	    <div class="user-item">
	      <img src="http://via.placeholder.com/128x128",class:= "img-responsive center-block>">
	      <div class="caption">
	        <h3><%= link_to user.name, user_path(user) %></h3>
	        <% if user != current_user %>
		      	<%= render partial: "shared/following", locals: {user: user} %>
		    	<%end%>
	      </div>
	    </div>
	  </div>
	<% end %>
	<br>
</div>