<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <p>[<%= @restaurant.category.name %>]</p>
    </div>

    <div class="col-md-4">
      <%= image_tag @restaurant.image, class: "img-responsive center-block" %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
          <li><strong>Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>

    <div class="clearfix"></div>

    <hr>

  </div>
</div>

<div class="container">
  <div class= "row">
    <%= form_for [@restaurant, @comment] do |f| %>
      <div class="form_group">
        <%= f.text_area :content, placeholder: "留言", class: "form-control" %>
      </div>
      <div class="form_group">
        <%= f.submit class:"btn btn-primary" %>
        <%= f.button "Cancel", type: :reset, class:"btn-primary" %>
      </div>
    <%end%> 
  </div>
  <% @restaurant.comments.each do |comment| %>
    <div>
      <h4><%=  comment.user.email.split('@').first %></h4>
      <p><%= simple_format comment.content %></p>
      <p class="text-muted">
        <em><%= time_ago_in_words(comment.created_at)   %> </em>
      </p>
    </div>
    <% if current_user.admin? %>
      <%= link_to "Delete", restaurant_comment_path(@restaurant, comment), method: :delete %>
    <%end%>

    <hr>
  <% end %>
</div>

